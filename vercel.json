{
  "version": 2,
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb",
        "runtime": "python3.9",
        "requirements": "requirements.txt"
      }
    },
    {
      "src": "static/**",
      "use": "@vercel/static"
    },
    {
      "src": "path/static/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/",
      "dest": "/app.py"
    },
    {
      "src": "/search",
      "dest": "/app.py",
      "methods": ["POST"]
    },
    {
      "src": "/terms",
      "dest": "/app.py"
    },
    {
      "src": "/privacy",
      "dest": "/app.py"
    },
    {
      "src": "/updates",
      "dest": "/app.py"
    },
    {
      "src": "/verify",
      "dest": "/app.py"
    },
     {
       "src": "/bypass-verification",
       "dest": "/app.py"
     },
     {
       "src": "/status",
       "dest": "/app.py"
     },
     {
       "src": "/(.*)",
       "dest": "/app.py",
      "headers": {
        "X-Frame-Options": "DENY",
        "X-Content-Type-Options": "nosniff",
        "Referrer-Policy": "strict-origin-when-cross-origin"
      }
    }
   ]
}
