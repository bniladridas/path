{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb",
        "runtime": "python3.11"
      }
    },
    {
      "src": "static/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/api/index.py"
    },
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    }
  ],
  "build": {
    "env": {
      "PYTHONPATH": "/var/task"
    },
    "command": "chmod +x build.sh && ./build.sh"
  },
  "env": {
    "PYTHONPATH": "/var/task"
  }
}
