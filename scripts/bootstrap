#!/usr/bin/env bash

set -e

cd "$(dirname "$0")/.."

# Only run brew commands on macOS (Darwin)
if [ -f "Brewfile" ] && [ "$(uname -s)" = "Darwin" ] && [ "$SKIP_BREW" != "1" ] && [ -t 0 ]; then
  brew bundle check >/dev/null 2>&1 || {
    echo -n "==> Install Homebrew dependencies? (y/N): "
    read -r response
    case "$response" in
      [yY][eE][sS]|[yY])
        brew bundle
        ;;
      *)
        ;;
    esac
    echo
  }
else
  echo "==> Skipping Homebrew setup (not on macOS or Brewfile not found)"
fi

echo "==> Installing Node dependenciesâ€¦"

PACKAGE_MANAGER=$(command -v yarn >/dev/null 2>&1 && echo "yarn" || echo "npm")

$PACKAGE_MANAGER install "$@"
